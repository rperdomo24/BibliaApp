<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="Bienvenidos a la biblia "
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:textStyle="bold" android:textSize="30sp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageButton
                    android:scaleType="fitXY"
                    android:layout_height="138dp"
                    android:layout_width="45dp" app:srcCompat="@drawable/creacion"
                    android:id="@+id/imageButton1" android:layout_weight="1" tools:srcCompat="@drawable/creacion"
                    style="@android:style/Widget.DeviceDefault.ImageButton"/>
            <ImageButton
                    android:scaleType="fitXY"
                    android:layout_height="138dp" android:layout_width="45dp" app:srcCompat="@drawable/jesus" android:id="@+id/imageButton2"
                    android:layout_weight="1" tools:srcCompat="@drawable/jesus"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Antiguo Testamento"
                    android:layout_height="wrap_content"
                    android:layout_width="45dp"
                    android:textAlignment="center"
                    android:id="@+id/textView13" android:layout_weight="1"/>
            <TextView
                    android:text="Nuevo Testamento"
                    android:layout_width="45dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content" android:id="@+id/textView14" android:layout_weight="1"/>
        </LinearLayout>
        <Button
                android:text="Buscar Lectura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button101" android:onClick="onClickLibros"/>
        <Button
                android:text="Citas Guardadas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button4"/>
        <Button
                android:text="Historial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button5"/>
        <Button
                android:text="ConfiguraciÃ³n"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button8"/>
        <Button
                android:text="Datos del creador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button7"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>